<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.famcircle"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.android.famcircle.ui.MainActivity"
            android:theme="@android:style/Theme.Holo.Light"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.android.famcircle.ui.ShareActivity"
            	  android:theme="@android:style/Theme.Holo.Light">
            <!-- VIEW一定需要吗 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
         <activity android:name="com.android.famcircle.ui.StatusImagePagerActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <!-- VIEW一定需要吗 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.android.famcircle.ui.StatusPicsSendActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <!-- VIEW一定需要吗 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.android.famcircle.ui.StatusSelectPictureActivity"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <!-- VIEW一定需要吗 -->
            <intent-filter>
                <action android:name="famnotes.ACTION_PICK" />
                <action android:name="famnotes.ACTION_MULTIPLE_PICK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.android.famcircle.ui.StatusOfPersonActivity"
            	  android:theme="@android:style/Theme.Holo.Light">
        </activity>
    </application>

</manifest>
