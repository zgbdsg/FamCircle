<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		  xmlns:applist="http://schemas.android.com/apk/res-auto"
    		android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_gravity="center"
		    android:layout_marginBottom="5dp"
		    android:background="#ffffff"
		    android:orientation="vertical">
		    
		<LinearLayout android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center"
				    android:orientation="horizontal">
		    
			<LinearLayout android:id="@+id/statuses_time"
			    		  android:layout_width="0dp"
			    		  android:layout_height="fill_parent"
			    		  android:layout_gravity="center|top"
			    		  android:layout_weight="3"
			    		  android:orientation="horizontal">
			    	<TextView android:id="@+id/day_of_time"
			    	    	  android:text="today"
			    	    	  android:layout_width="wrap_content"
			    	    	  android:layout_height="wrap_content"/>
		
			</LinearLayout>
			
			<LinearLayout android:id="@+id/statuses_at_the_time"
			    		  android:layout_width="0dp"
			    		  android:layout_height="fill_parent"
			    		  android:layout_gravity="center|top"
			    		  android:layout_marginBottom="8dp"
			    		  android:layout_weight="7"
			    		  android:orientation="vertical">
			    <com.android.famcircle.linearlistview.LinearListView
			               android:id="@+id/list_of_statuses_at_the_time"
			        	   android:layout_width="match_parent"
    					   android:layout_height="match_parent"
		             	   android:orientation="vertical"
					       android:paddingLeft="4dp"
					       applist:dividerThickness="8dp"
		             	   android:layout_marginTop="4dp"
					       android:divider="@null" />
			</LinearLayout>
		
		</LinearLayout>
		
		<View  
		        android:layout_height="0.05dp" 
		        android:background="#D1D1D1" 
		        android:layout_marginTop="4dp"
		        android:layout_width="match_parent">
		</View>
</LinearLayout>
