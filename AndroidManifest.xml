<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.famcircle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.famnotes.android.boot.Appstart"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.famnotes.android.boot.PrepLogin"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.famnotes.android.boot.LoadingActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
		<activity
            android:name="com.famnotes.android.boot.Login"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>        
       		<activity
            android:name="com.famnotes.android.boot.Register"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>     
          
        <activity  android:name="com.famnotes.android.boot.FamilyMemberSetting"
            		android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
		<activity  android:name="com.famnotes.android.boot.SelectContactActivity"
		    android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
		<activity  android:name="com.android.famcircle.ui.GroupSettingActivity"
		    	   android:screenOrientation="portrait"
		    	   android:label="@string/group_setting" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity  android:name="com.famnotes.android.boot.RegisterGroup"
            android:screenOrientation="portrait"
		     android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
		<activity android:name="com.famnotes.crop.CropImageActivity" 
		    android:screenOrientation="portrait"
		    android:theme="@android:style/Theme.Light.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
		<!-- ********************************************************************************************************************* -->
        <activity
            android:name="com.android.famcircle.ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Light"
            android:label="@string/app_name" >
        </activity>
        
        <activity
			android:name="com.android.famcircle.ui.ShareActivity"
			android:screenOrientation="portrait"
            	  android:theme="@android:style/Theme.Holo.Light">
            <!-- VIEW一定需要吗 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
         <activity 
			android:name="com.android.famcircle.ui.StatusImagePagerActivity"
			android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <!-- VIEW一定需要吗 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
        <activity 
			android:name="com.android.famcircle.ui.StatusPicsSendActivity"
			android:screenOrientation="portrait"
           	android:theme="@android:style/Theme.Holo.Light">
            <!-- VIEW一定需要吗 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.android.famcircle.ui.StatusSelectPictureActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <!-- VIEW一定需要吗 -->
            <intent-filter>
                <action android:name="famnotes.ACTION_PICK" />
                <action android:name="famnotes.ACTION_MULTIPLE_PICK" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.android.famcircle.ui.StatusOfPersonActivity"
            	  android:screenOrientation="portrait"
            	  android:theme="@android:style/Theme.Holo.Light">
        </activity>
        <activity
            android:name="com.android.famcircle.picselect.ImageBucketActivity"
            android:screenOrientation="portrait"
            android:label="@string/imagebucket"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name = "com.android.famcircle.picselect.ImageSelectActivity"
            android:screenOrientation="portrait"
            android:label="@string/imageselect"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.android.famcircle.picselect.PublishedActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"

            android:label="@string/publish_activity">
        </activity>
        <activity
            android:name="com.android.famcircle.picselect.PhotoDisplayActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.android.famcircle.orderlist.OrderStatusListActivity"
            android:screenOrientation="portrait"
            android:label="@string/orderlist"
            android:theme="@android:style/Theme.Holo.Light">
        </activity>
        
    </application>

</manifest>
