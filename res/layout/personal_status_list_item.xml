<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_gravity="center"
		    android:layout_marginBottom="5dp"
		    android:background="#ffffff"
		    android:orientation="horizontal">
    
	<LinearLayout android:id="@+id/statuses_time"
	    		  android:layout_width="0dp"
	    		  android:layout_height="fill_parent"
	    		  android:layout_gravity="center|top"
	    		  android:layout_weight="3"
	    		  android:orientation="horizontal">
	    	<TextView android:id="@+id/day_of_time"
	    	    	  android:text="today"
	    	    	  android:layout_width="wrap_content"
	    	    	  android:layout_height="wrap_content"/>

	</LinearLayout>
	
	<LinearLayout android:id="@+id/statuses_at_the_time"
	    		  android:layout_width="0dp"
	    		  android:layout_height="fill_parent"
	    		  android:layout_gravity="center|top"
	    		  android:layout_marginBottom="8dp"
	    		  android:layout_weight="7"
	    		  android:orientation="vertical">
	    <com.android.famcircle.FamcirleListView
	               android:id="@+id/list_of_statuses_at_the_time"
	        	   android:layout_width="fill_parent"
             	   android:layout_height="fill_parent"
             	   android:dividerHeight="4dp"
			       android:paddingLeft="4dp"
             	   android:layout_marginTop="4dp"
			       android:divider="@null" />
	</LinearLayout>
</LinearLayout>
